@using Bookstore.MvcUI.Models.Outgoing;

@model AuthorForDisplay
@{
    ViewData["Title"] = "Details of the author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.FirstName  @Model.LastName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 160px" src="@Model.ProfilePictureURL" />
                </div>
                <form-group asp-for="ProfilePictureURL" class="mb-3" readonly></form-group>
                <form-group asp-for="FirstName" class="mb-3" readonly></form-group>
                <form-group asp-for="LastName" class="mb-3" readonly></form-group>
                <div class="form-group mb-3">
                    <label asp-for="Bio" class="control-label"></label>
                    <textarea asp-for="Bio" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (@*User.Identity.IsAuthenticated && User.IsInRole("Admin")*@1 == 1)
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>