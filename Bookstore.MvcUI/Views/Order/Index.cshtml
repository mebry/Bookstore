@using Bookstore.MvcUI.ViewModels.Outgoing;
@model List<OrderInformationForDisplay>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container my-4">

    @if (Model.Any())
    {
        <h2 class="text-center mb-4">My Orders</h2>
        <table class="table-info">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Total Price ($)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.CreatedAt</td>
                        <td>@order.TotalPrice.ToString("c")</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-4">
            <a class="btn btn-secondary" href="/Book">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6 offset-3 alert alert-secondary text-center">
                <h2 class="text-muted font-weight-bold">No orders found</h2>
                <hr />
                <p class="text-muted">You need to make your first purchase.</p>
                <div class="text-center">
                    @Html.ActionLink("Go to Books", "Index", "Book", null, new { @class = "btn btn-secondary btn-sm mt-3 mx-auto d-block" })
                </div>
            </div>
        </div>
    }
</div>